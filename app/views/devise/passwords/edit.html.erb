<div class="jumbotron center-block" style="margin-top:30px;width:420px;">
<h2 style="margin-top:0px;margin-bottom:30px;"><%= t('.change_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, t('.new_password') %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", style: "width:300px;margin-bottom:5px" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('.confirm_new_password') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", style: "width:300px;margin-bottom:5px" %>
  </div>

  <div class="actions">
    <%= f.submit t('.change_my_password'), class: "btn btn-primary" %>
  </div>
<% end %>
<hr>
<%= render "devise/shared/links" %>
</div>
