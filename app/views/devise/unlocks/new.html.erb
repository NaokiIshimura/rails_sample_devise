<div class="jumbotron center-block" style="width:420px;margin: 0 auto;">

  <h2><%= t('.resend_unlock_instructions') %></h2>

  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true, class: "form-control", style: "width:300px;margin-bottom:5px" %>
      </div>

      <div class="actions">
        <%= f.submit t('.resend_unlock_instructions'), class: "btn btn-primary" %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
